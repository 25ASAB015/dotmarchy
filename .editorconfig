root = true

[*.sh]
# like -i=4
indent_style = space
indent_size = 4

# --language-dialect
shell_variant = bash
simplify = true
binary_next_line = true

# --case-indent
switch_case_indent = true
space_redirects = true
keep_padding = true

# --func-next-line
function_next_line = false
minify = false

[dotmarchy]
inherit = false
indent_style = space
indent_size = 4
shell_variant = bash
simplify = true
binary_next_line = true
switch_case_indent = true
space_redirects = true
keep_padding = true
function_next_line = false
minify = false