root = true

[*]
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

[*.sh]
# Ajustes espec√≠ficos para scripts, heredan [*]
indent_style = space
indent_size = 2

# --language-dialect
shell_variant = bash
simplify = true
binary_next_line = true

# --case-indent
switch_case_indent = true
space_redirects = true
keep_padding = true

# --func-next-line
function_next_line = false
minify = false

[dotmarchy]
indent_style = space
indent_size = 2
shell_variant = bash
simplify = true
binary_next_line = true
switch_case_indent = true
space_redirects = true
keep_padding = true
function_next_line = false
minify = false