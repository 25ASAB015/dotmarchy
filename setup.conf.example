# dotmarchy Configuration File
# Copy this file to ~/.config/dotmarchy/setup.conf and customize it
#
# This file controls both:
# 1. Extra packages installed with --extras flag
# 2. Environment setup performed with --setup-env flag

#==============================================================================
# EXTRA PACKAGES (used with --extras flag)
#==============================================================================

# Extra packages from official Arch repositories
# Installed via: pacman -S
# Default: All system packages from install_all_dependencies.sh
EXTRA_DEPENDENCIES=(
    # Essential tools
    "git"             # Distributed version control system
    "curl"            # Tool for transferring data with URLs
    "wget"            # Utility for downloading files from the web
    "jq"              # Command-line JSON processor
    "tar"             # Utility for archiving files
    "unzip"           # Utility for decompressing ZIP files
    "zip"             # Utility for compressing files in ZIP format
    
    # Development tools
    "gcc"             # GNU C/C++ compiler (includes g++)
    "make"            # Utility for automated compilation
    "cmake"           # Cross-platform build system
    "pkg-config"      # System for managing compilation flags
    "base-devel"      # Group of basic development tools
    
    # Clipboard and terminal utilities
    "xclip"           # Command-line interface for X11 clipboard
    "xsel"            # X11 clipboard handler
    "wl-clipboard"    # Clipboard utilities for Wayland
    
    # Search and navigation
    "ripgrep"         # Ultra-fast search tool (rg)
    "fzf"             # Fuzzy command-line finder
    "fd"              # Simple and fast alternative to 'find'
    
    # Viewers and formatters
    "bat"             # Cat clone with syntax highlighting
    "lsd"             # Modern ls replacement with icons and colors
    "eza"             # Modern ls replacement (exa fork)
    "shfmt"           # Go-based shell script formatter
    
    # Miscellaneous utilities
    "figlet"          # ASCII art text generator
    "lolcat"          # Colorizes terminal output with rainbow
    
    # Programming languages
    "python"          # Python 3 programming language
    "python-pip"      # Package manager for Python
    "python-pipx"     # Python application installer in isolated environments
    "ruby"            # Ruby programming language
    "nodejs"          # JavaScript runtime based on V8
    "npm"             # Package manager for Node.js
    
    # Language Servers and development tools
    "lua"             # Lua scripting language
    "luarocks"        # Package manager for Lua
    "lua-language-server"  # Language Server Protocol for Lua
    "ccls"            # Language Server for C/C++/Objective-C
    
    # Additional languages (optional)
    "julia"           # Programming language for scientific computing
    "php"             # PHP programming language
    "composer"        # Dependency manager for PHP
    
    # Rust tools
    "rust"            # Rust systems programming language (includes cargo)
    "rust-analyzer"   # Language Server for Rust
    
    # Python packages (to avoid PEP 668 on Arch)
    "python-pynvim"   # Python client for Neovim
    "python-jedi"     # Autocompletion for Python
    "python-pygments" # Syntax highlighter
    
    # Editor and multiplexer
    "neovim"          # Modern vim-based text editor
    "tmux"            # Terminal multiplexer
    "htop"            # Interactive process viewer
)

# Extra packages from Chaotic-AUR (pre-compiled AUR packages)
# Installed via: pacman -S (after Chaotic-AUR is configured)
# Default: brave-bin visual-studio-code-bin
EXTRA_CHAOTIC_DEPENDENCIES=(
    "brave-bin"              # Privacy-focused web browser
    "visual-studio-code-bin" # Microsoft's code editor
)

# Extra packages from AUR (compiled from source)
# Installed via: paru -S
# Default: zsh-theme-powerlevel10k-git zsh-autosuggestions zsh-syntax-highlighting
EXTRA_AUR_APPS=(
    "zsh-theme-powerlevel10k-git"  # Powerful Zsh theme
    "zsh-autosuggestions"          # Fish-like autosuggestions for Zsh
    "zsh-syntax-highlighting"      # Syntax highlighting for Zsh
)

# Extra npm packages (installed globally)
# Installed via: npm install -g
# Default: All npm packages from install_all_dependencies.sh
EXTRA_NPM_PACKAGES=(
    "@fission-ai/openspec"           # OpenSpec CLI tool
    "neovim"                         # Neovim client for Node.js - enables JS plugins
    "tree-sitter-cli"                # Tree-sitter CLI - parser for syntax analysis
    "fd-find"                        # Fast and user-friendly file search tool
    "cspell"                         # Spell checker for code and documents
    "vim-language-server"            # Language Server Protocol for Vim script
    "typescript"                     # TypeScript superset with static typing (includes tsserver)
    "typescript-language-server"     # Language Server for TypeScript/JavaScript
    "eslint_d"                       # ESLint daemon for ultra-fast JavaScript linting
    "prettier"                       # Opinionated code formatter for multiple languages
    "yaml-language-server"           # Language Server Protocol for YAML
    "bash-language-server"           # Language Server Protocol for Bash/Shell scripts
    "nodemon"                        # Tool to automatically restart Node.js applications
    "@vscode/codicons"               # Icon font used in Visual Studio Code
)

# Cargo packages (Rust tools)
# Installed via: cargo install
# Default: bob-nvim tree-sitter-cli stylua
CARGO_PACKAGES=(
    "bob-nvim"           # Neovim version manager
    "tree-sitter-cli"    # Tree-sitter CLI for syntax parsing
    "stylua"             # Lua code formatter
)

# Python pip packages (libraries - only used on non-Arch systems)
# Installed via: python3 -m pip install --user
# On Arch Linux, install these via pacman (python-pynvim, python-jedi, python-pygments)
# Default: pynvim jedi pygments
PIP_PACKAGES=(
    "pynvim"      # Python client for Neovim
    "jedi"        # Python autocompletion library
    "pygments"    # Syntax highlighting library
)

# Python pipx packages (applications - used on all systems)
# Installed via: pipx install
# Default: doq beautysh black ruff neovim-remote flake8 python-lsp-server pyright rich-cli trash-cli codespell
PIPX_PACKAGES=(
    "doq"                   # Python docstring generator
    "beautysh"              # Shell script formatter
    "black"                 # Python code formatter
    "ruff"                  # Fast Python linter
    "neovim-remote"         # Control Neovim remotely (command: nvr)
    "flake8"                # Python style checker
    "python-lsp-server"     # Python Language Server (command: pylsp)
    "pyright"               # Microsoft's Python type checker
    "rich-cli"              # Rich terminal formatting
    "trash-cli"             # CLI for trash/recycle bin
    "codespell"             # Spell checker for code
)

# Ruby gem packages
# Installed via: gem install --user-install
# Default: neovim
GEM_PACKAGES=(
    "neovim"  # Ruby client for Neovim
)

#==============================================================================
# ENVIRONMENT SETUP (used with --setup-env flag)
#==============================================================================

# Directories to create
# Format: Array of paths (supports ~)
DIRECTORIES=(
    "~/Programming/work"
    "~/Programming/personal"
    "~/.local/bin"
    "~/src/tries"
)

# Git repositories to clone
# Format: "URL:DESTINATION"
GIT_REPOS=(
    "https://github.com/tmux-plugins/tpm:~/.tmux/plugins/tpm"
    "https://github.com/kazhala/scripts.git:~/Programming/scripts"
)

# Scripts to download
# Format: "URL:DESTINATION"
# Scripts will be made executable automatically
SCRIPTS=(
    "https://raw.githubusercontent.com/tobi/try/refs/heads/main/try.rb:~/.local/bin/try.rb"
)

# Lines to add to shell configuration
# Format: Array of lines to add
# Will be added idempotently (no duplicates)
SHELL_LINES=(
    'eval "$(ruby ~/.local/bin/try.rb init ~/src/tries)"'
)

